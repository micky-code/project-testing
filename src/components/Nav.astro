---
// Imports for language and translations
import LanguagePicker from '../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<ul class="flex flex-col md:flex-row items-center justify-between bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 text-white p-5 rounded-lg shadow-md space-y-3 md:space-y-0 md:px-10 border-b-2 border-white/10">
  <!-- Logo and Company Name -->
  <li class="flex items-center space-x-3">
    <!-- Logo -->
    <img 
      src="../../public/po.png" 
      alt="Company Logo" 
      class="w-14 h-14 object-cover rounded-full transition-transform duration-300 hover:scale-105"
    />
    <!-- Company Name -->
    <span class="text-3xl font-semibold text-white hover:text-cyan-300 transition-colors duration-300">Poscar</span>
  </li>

  <!-- Home Link -->
  <li>
    <a 
      href={`/${lang}/`} 
      class="text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-white/10 hover:text-cyan-300 focus:bg-white/20 focus:text-pink-200"
    >
      {t('nav.home')}
    </a>
  </li>

  <!-- Products & Services with Mega Menu -->
  <li class="relative group">
    <a 
      href="#" 
      class="text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-white/10 hover:text-cyan-300 focus:bg-white/20 focus:text-pink-200"
    >
      {t('nav.products_services')}
    </a>
    <!-- Mega Menu -->
    <div class=" absolute hidden group-hover:block bg-white shadow-lg p-5 rounded-xl w-80 left-0 top-full mt-2 transition-opacity duration-300 opacity-0 group-hover:opacity-100">
      <div class="grid grid-cols-2 gap-x-0 ">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">{t('nav.education')}</h3>
          <ul>
            <li><a href="https://wikischool.asia" class="text-blue-500 hover:text-blue-700">{t('nav.kindergarten_k12')}</a></li>
            <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.university_solution')}</a></li>
            <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.enrollment')}</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">{t('nav.enterprise')}</h3>
          <ul>
            <li><a href="https://vithean.com" class="text-blue-500 hover:text-blue-700">{t('nav.vithean_page')}</a></li>
            <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.attendance_card_device')}</a></li>
            <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.hrm_solution')}</a></li>
          </ul>
        </div>
      </div>
    </div>
  </li>

  <!-- About Us Link -->
  <li class="relative group">
    <a 
      href={`/${lang}/about/`} 
      class="text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-white/10 hover:text-cyan-300 focus:bg-white/20 focus:text-pink-200"
    >
      {t('nav.about')}
    </a>
    <!-- Dropdown Menu -->
    <div class="absolute hidden group-hover:block bg-white shadow-lg p-4 rounded-xl w-56 left-0 top-full mt-2 transition-opacity duration-300 opacity-0 group-hover:opacity-100">
      <ul>
        <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.company_profile')}</a></li>
        <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.our_customers')}</a></li>
        <li class="relative group">
          <a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.legal')}</a>
          <!-- Legal Submenu -->
          <div class="absolute hidden group-hover:block bg-white shadow-lg p-4 rounded-xl w-40 left-full top-0 mt-0 transition-opacity duration-300 opacity-0 group-hover:opacity-100">
            <ul>
              <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.privacy')}</a></li>
              <li><a href="#" class="text-blue-500 hover:text-blue-700">{t('nav.terms_conditions')}</a></li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </li>

  <!-- Blogs Link -->
  <li>
    <a 
      href={`/${lang}/blogs/`} 
      class="text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-white/10 hover:text-cyan-300 focus:bg-white/20 focus:text-pink-200"
    >
      {t('nav.blogs')}
    </a>
  </li>

  <!-- Contact Us Link -->
  <li>
    <a 
      href={`/${lang}/contact/`} 
      class="text-white font-semibold px-4 py-2 rounded-lg transition-colors duration-300 hover:bg-white/10 hover:text-cyan-300 focus:bg-white/20 focus:text-pink-200"
    >
      {t('nav.contact_us')}
    </a>
  </li>

  <!-- Language Picker -->
  <li class="ml-3">
    <LanguagePicker />
  </li>
</ul>
