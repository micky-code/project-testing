---
// Import your layout and fetch blog posts
import Base from "../../../layouts/Base.astro";
const posts = await Astro.glob("../../content/blog/*.md");
---
<Base>
  <h1>Blog</h1>
  <ul>
    {posts.map((post) => (
      <li>
        <a href={post.url}>{post.frontmatter.title}</a>
      </li>
    ))}
  </ul>
</Base>
