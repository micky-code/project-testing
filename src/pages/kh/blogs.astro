---
// src/pages/blogs.astro
import Base from "../../layouts/Base.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <!-- Blog Header Section -->
  <section class="bg-slate-600 text-white py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl font-extrabold mb-4">{t('blogs.title')}</h1>
      <p class="text-xl mb-8">{t('blogs.description')}</p>
    </div>
  </section>

  <!-- Featured Blog Section -->
  <section class="py-16 bg-gray-100 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6">{t('blogs.featuredTitle')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Example Featured Blog Card -->
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">{t('blogs.post1.title')}</h3>
          <p class="text-lg mb-4">
            {t('blogs.post1.description')}
          </p>
          <a
            href={`/${lang}/blog/post1`}
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            {t('blogs.readMore')}
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">{t('blogs.post2.title')}</h3>
          <p class="text-lg mb-4">
            {t('blogs.post2.description')}
          </p>
          <a
            href={`/${lang}/blog/post2`}
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            {t('blogs.readMore')}
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">{t('blogs.post3.title')}</h3>
          <p class="text-lg mb-4">
            {t('blogs.post3.description')}
          </p>
          <a
            href={`/${lang}/blog/post3`}
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            {t('blogs.readMore')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Blog Posts Section -->
  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6">{t('blogs.recentPosts')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Repeat recent posts layout as needed -->
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">{t('blogs.recentPost1.title')}</h3>
          <p class="text-lg mb-4">
            {t('blogs.recentPost1.description')}
          </p>
          <a
            href={`/${lang}/blog/recent-post1`}
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            {t('blogs.readMore')}
          </a>
        </div>
        <!-- Add more blog cards as needed -->
      </div>
    </div>
  </section>

  <!-- Call to Action: Explore More Blogs -->
  <section class="py-16 text-black text-center px-6 md:px-12 lg:px-16">
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-semibold mb-4">
        {t('blogs.exploreMore')}
      </h2>
      <p class="text-lg md:text-xl mb-6">
        {t('blogs.exploreDescription')}
      </p>
      <a
        href={`/${lang}/all-blogs`}
        class="bg-red-700 border-2 text-white py-3 px-8 rounded-lg text-lg font-semibold hover:bg-zinc-100 hover:border-red-600 hover:text-red-700 transition-colors duration-300"
      >
        {t('blogs.viewAll')}
      </a>
    </div>
  </section>
</Base>
