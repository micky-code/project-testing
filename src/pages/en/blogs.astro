---
import Base from "../../layouts/Base.astro";
const allPosts = await Astro.glob('../content/blog/en/*.md');
const pageTitle = "Welcome to My Blog - Poscar";
---

<Base pageTitle={pageTitle}>
  <section class="bg-gray-50 py-12 min-h-screen">
    <div class="max-w-6xl mx-auto px-6">
      <!-- Page Title -->
      <h1 class="text-5xl font-bold text-gray-800 text-center mb-8">{pageTitle}</h1>
      <p class="text-lg text-gray-600 text-center mb-12">
        Dive into my latest posts, insights, and updates. Stay inspired and informed!
      </p>
      <!-- Blog Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allPosts.map((post) => (
          <div class="bg-white shadow-md rounded-lg overflow-hidden transition-shadow hover:shadow-lg">
            <a href={post.url} class="block">
              <div class="p-6">
                <h2 class="text-2xl font-semibold text-gray-800 mb-2 hover:text-blue-500 transition-colors">
                  {post.frontmatter.title}
                </h2>
                <p class="text-gray-500 text-sm">
                  {post.frontmatter.description || "Click to read more..."}
                </p>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Base>
