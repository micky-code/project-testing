---
// src/pages/index.astro
import Base from '../../layouts/Base.astro';
import Slider from '../../components/Slider.vue';
---

<Base>
  <!-- Welcome Section -->
  <section class="bg-gradient-to-r from-cyan-500 via-purple-500 to-pink-500 text-white py-16 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4">Welcome to Poscar</h1>
      <p class="text-lg md:text-xl mb-8">Your trusted partner for innovative solutions</p>
      <a 
        href="/products_services" 
        class="bg-cyan-600 text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-cyan-500 transition-colors duration-300"
      >
        Explore Our Services
      </a>
    </div>
  </section>

  <!-- About Us Section -->
  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6">About Us</h2>
      <p class="text-lg md:text-xl mb-8">Learn more about our journey and vision.</p>
      <a 
        href="/about/" 
        class="bg-transparent border-2 border-cyan-600 text-cyan-600 py-3 px-6 rounded-lg text-lg font-semibold hover:bg-cyan-600 hover:text-white transition-colors duration-300"
      >
        Learn More
      </a>
    </div>
  </section>

  <!-- Featured Products & Services Section -->
  <section class="py-16 bg-gray-100 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6">Featured Products & Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Example of Product/Service Card -->
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">Kindergarten & K12</h3>
          <p class="text-lg mb-4">Providing quality education from kindergarten through K12 levels.</p>
          <a 
            href="/products_services" 
            class="text-cyan-600 font-semibold hover:text-cyan-400 transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">University Solutions</h3>
          <p class="text-lg mb-4">Empowering higher education with innovative solutions.</p>
          <a 
            href="/products_services" 
            class="text-cyan-600 font-semibold hover:text-cyan-400 transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">HRM Solutions</h3>
          <p class="text-lg mb-4">Transforming human resources management with smart technology.</p>
          <a 
            href="/products_services" 
            class="text-cyan-600 font-semibold hover:text-cyan-400 transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 bg-cyan-600 text-white text-center px-6 md:px-12 lg:px-16">
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-semibold mb-4">Get in Touch with Us</h2>
      <p class="text-lg md:text-xl mb-6">Have questions or need assistance? We're here to help!</p>
      <a 
        href="/contact" 
        class="bg-white text-cyan-600 py-3 px-8 rounded-lg text-lg font-semibold hover:bg-cyan-600 hover:text-white transition-colors duration-300"
      >
        Contact Us
      </a>
    </div>
  </section>
</Base>
