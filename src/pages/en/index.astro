---
// src/pages/index.astro
import Base from "../../layouts/Base.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <!-- Welcome Section -->
  <section class="bg-red-700 text-white py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl font-extrabold mb-4">Poscar Digital</h1>
      <p class="text-xl mb-8"></p>
      <!-- <a
        href="/products_services"
        class="bg-transparent border-2 border-slate text-white py-3 px-6 rounded-lg text-lg font-semibold hover:bg-red-700 transition-colors duration-300"
      >
        Get Start
      </a> -->
    </div>
  </section>

  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 gap-12">
      
      <!-- Text Section: About Us Content (on the left) -->
      <div class="text-center md:text-left">
        <h2 class="text-3xl md:text-4xl font-semibold mb-6">About Us</h2>
        <p class="text-lg md:text-xl mb-8">
          Watch our story and see what drives us every day to innovate and inspire.
        </p>
        <div class="text-center md:text-left">
          <h2 class="text-1xl md:text-2xl font-semibold mb-6">Vision</h2>
          <p class="text-lg md:text-xl mb-8">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Facere ipsa exercitationem laudantium ab ratione! Debitis voluptatum esse mollitia itaque porro, non nihil! Ullam veniam, temporibus officiis delectus doloribus recusandae sapiente!
          </p>
        </div>
      </div>
  
      <!-- Video Section: Embedded YouTube Video (on the right) -->
      <div class="flex justify-center items-center shadow-xl">
        <div class="w-full max-w-3xl">
          <!-- Adjusted iframe for a larger video -->
          <iframe
            class="w-full h-[400px] md:h-[300px]"
            src="https://www.youtube.com/embed/SUGhEr_7B3c"
            title="Our Vision Video"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </section>
  
  

  <!-- Featured Products & Services Section -->
  <section class="py-16 bg-gray-100 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-semibold mb-6">
        Featured Products & Services
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Example of Product/Service Card -->
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">Kindergarten & K12</h3>
          <p class="text-lg mb-4">
            Providing quality education from kindergarten through K12 levels.
          </p>
          <a
            href="/products_services"
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">University Solutions</h3>
          <p class="text-lg mb-4">
            Empowering higher education with innovative solutions.
          </p>
          <a
            href="/products_services"
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
        <div class="bg-white shadow-xl rounded-lg p-6">
          <h3 class="text-2xl font-semibold mb-4">HRM Solutions</h3>
          <p class="text-lg mb-4">
            Transforming human resources management with smart technology.
          </p>
          <a
            href="/products_services"
            class="text-red-600 font-semibold hover:underline transition-colors duration-300"
          >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="py-16 text-black text-center px-6 md:px-12 lg:px-16">
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-semibold mb-4">
        Get in Touch with Us
      </h2>
      <p class="text-lg md:text-xl mb-6">
        Have questions or need assistance? We're here to help!
      </p>
      <a
      href={`/${lang}/contact/`} 
        class="bg-red-700 border-2  text-white py-3 px-8 rounded-lg text-lg font-semibold hover:bg-zinc-100 hover:border-red-600 hover:text-red-700 transition-colors duration-300"
      >
        Contact Us
      </a>
    </div>
  </section>
</Base>
