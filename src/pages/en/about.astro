---
import Base from '../../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <!-- About Us Main Section with New Background Style -->
  <section class="about-section py-20 px-6 md:px-12 lg:px-16 bg-slate-600 text-white">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">About Us</h1>
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
        POSCAR Digital is a leader in smart education, accounting, attendance, and ERP solutions, creating a complete digital eco-platform to empower organizations and individuals.
      </p>
    </div>
  </section>

  <!-- Company Profile Section with Elevated Card Style -->
  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center max-w-4xl">
      <div class="p-10 bg-white shadow-lg rounded-lg transition-shadow duration-300 hover:shadow-xl">
        <h2 class="text-4xl md:text-5xl font-semibold mb-4">Company Profile</h2>
        <p class="text-lg md:text-xl mb-8">
          POSCAR Digital was established with a mission to reshape digital landscapes, providing end-to-end solutions for SMEs and educational institutions across Cambodia and beyond.
        </p>
        <a 
          href={`/${lang}/company-profile`} 
          class="text-blue-600 font-semibold hover:text-blue-400 transition-colors duration-300 text-lg"
        >
          Read More
        </a>
      </div>
    </div>
  </section>

  <!-- Vision Section with Distinct Background and Icons -->
  <section class="py-16 bg-gray-100 text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-semibold mb-4">Our Vision</h2>
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
        To establish a complete digital eco-platform for education and business operations, supporting SMEs in Cambodia.
      </p>
    </div>
  </section>

  <!-- Mission Section with Enhanced Layout -->
  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-semibold mb-6">Our Mission</h2>
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
        To engage educational institutions and SMEs in a complete digital eco-system, empowering them with smart technology and resources.
      </p>
    </div>
  </section>

  <!-- Value Proposition Section with Icon Cards -->
  <section class="py-16 bg-gray-50 text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-semibold mb-6">Our Value Proposition</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-8 bg-gray-100 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <p class="text-lg md:text-xl mb-4">
            We enable our clients to maximize their business horizon in the most convenient and secure manner.
          </p>
        </div>
        <div class="p-8 bg-gray-100 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <p class="text-lg md:text-xl mb-4">
            Ensuring our clients stay connected to their operations and stakeholders at all times.
          </p>
        </div>
        <div class="p-8 bg-gray-100 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <p class="text-lg md:text-xl mb-4">
            Providing innovative solutions tailored to unique business needs.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Customers Section with Emphasized Claim -->
  <section class="py-16 bg-gray-100 text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-semibold mb-6">Our Customers</h2>
      <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto">
        Serving a diverse clientele across Cambodia and the region, from educational institutions to SMEs and enterprises.
      </p>
      <a 
        href={`/${lang}/our-customers`} 
        class="text-blue-600 font-semibold hover:text-blue-400 transition-colors duration-300 text-lg"
      >
        Explore Our Customers
      </a>
    </div>
  </section>

  <!-- Legal Section with Clear Call to Action -->
  <section class="py-16 bg-white text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl md:text-5xl font-semibold mb-6">Legal</h2>
      <div class="flex flex-col md:flex-row justify-center gap-8">
        <a 
          href={`/${lang}/legal/privacy`} 
          class="text-gray-600 font-semibold hover:underline transition duration-300 text-lg"
        >
          Privacy Policy
        </a>
        <a 
          href={`/${lang}/legal/terms-and-conditions`} 
          class="text-gray-600 font-semibold hover:underline transition duration-300 text-lg"
        >
          Terms and Conditions
        </a>
      </div>
    </div>
  </section>

  <!-- Call to Action Section with Encouraging Tone -->
  <section class="py-16 text-gray-800 text-center px-6 md:px-12 lg:px-16 bg-gradient-to-b from-gray-100 to-white">
    <div class="container mx-auto">
      <h2 class="text-4xl md:text-5xl font-semibold mb-4">Join Us on Our Journey</h2>
      <p class="text-lg md:text-xl mb-6">Want to learn more about our work or have any inquiries? Connect with us today!</p>
      <a 
        href={`/${lang}/contact`} 
        class="bg-blue-600 text-white py-3 px-8 rounded-lg text-lg font-semibold hover:bg-blue-500 transition-colors duration-300"
      >
        Contact Us
      </a>
    </div>
  </section>
</Base>