---
// Import your base layout and utilities
import Base from "../../layouts/Base.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <!-- Contact Us Section -->
  <section
    class="contact-section py-16 bg-gray-50 text-gray-800 px-6 md:px-12 lg:px-16"
  >
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6">
        Contact Us
      </h2>
      <p class="text-lg md:text-xl text-center mb-8">
        We'd love to hear from you! Reach out with any questions or inquiries.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <form
          action="#"
          method="POST"
          class="bg-white shadow-md rounded-lg p-8"
          id="contact-form"
        >
          <div class="mb-6">
            <label
              for="name"
              class="block text-lg font-medium text-gray-700 mb-2"
              >Your Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Enter your name"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-600"
            />
          </div>

          <div class="mb-6">
            <label
              for="email"
              class="block text-lg font-medium text-gray-700 mb-2"
              >Email Address</label
            >
            <input
              type="email"
              id="email"
              name="email"
              placeholder="example@example.com"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-600"
            />
          </div>

          <div class="mb-6">
            <label
              for="message"
              class="block text-lg font-medium text-gray-700 mb-2"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              placeholder="message"
              rows="5"
              required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-600"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full border-2 border-slate-600 text-slate-600 py-3 rounded-lg text-lg font-semibold hover:bg-slate-600 hover:text-white transition-colors duration-300"
          >
            Send Message
          </button>
        </form>

        <!-- Contact Details -->
        <div class="bg-gray-100 shadow-md rounded-lg p-8">
          <h3 class="text-2xl font-semibold mb-4">Get in Touch</h3>
          <p class="text-lg mb-4">
            For any inquiries, please use the contact form or reach out through
            the details below:
          </p>

          <ul class="text-lg">
            <li class="mb-4">
              <strong>Address:</strong><br />
              3E:Fii Building 6th-7th Floor,<br />
              Street Vimean Ahha, Kien Klaing Village,<br />
              Sangkat Chroy Changva, Khan Chroy Changvar,<br />
              Phnom Penh, Cambodia.
            </li>
            <li class="mb-4">
              <strong>Phone:</strong>
              095 569 568 | 081 569 568
            </li>
            <li>
              <strong>Email:</strong>
              info@poscar.com
            </li>
          </ul>

          <!-- Google Map Embed -->
          <div class="mt-8">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3048.3501001134096!2d104.92547577370833!3d11.594652843571561!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310953acc34f48bd%3A0xdc7731a1497fa17b!2sPOSCAR%20Digital%20Co.%2C%20Ltd.!5e1!3m2!1skm!2skh!4v1731403925110!5m2!1skm!2skh"
              style="width: 100%; aspect-ratio: 16/9; border: 0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Link to External Script -->
  <script src="../../scripts/contact.js"></script>
</Base>
